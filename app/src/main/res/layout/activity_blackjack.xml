<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBalance"
            android:text="ðŸ’° Balance: 1000 chips"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="40dp"
            />
        <TextView
            android:id="@+id/tvGameTitle"
            android:text="JackRush"
            android:paddingBottom="15dp"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etBetAmount"
            android:hint="Enter bet amount"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/grey"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:paddingBottom="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttDeal"
                android:text="@string/deal"
                android:backgroundTint="@color/purple"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttHit"
                android:text="@string/hit"
                android:backgroundTint="@color/purple"
                android:textColor="@color/white"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttStand"
                android:text="@string/stand"
                android:backgroundTint="@color/purple"
                android:textColor="@color/white"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDealerLabel"
            android:text="Dealer:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDealerHand"
            android:text="(no cards yet)"
            android:paddingBottom="15dp"
            android:textColor="@color/grey"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPlayerLabel"
            android:text="You:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPlayerHand"
            android:text="(no cards yet)"
            android:textColor="@color/grey"
            android:layout_marginBottom="16dp"
            android:paddingBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvResult"
            android:text="Place your bet and press Deal."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnResetBalance"
            android:text="Reset Balance"
            android:backgroundTint="@color/purple"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
